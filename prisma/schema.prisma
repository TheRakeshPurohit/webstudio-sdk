// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
  output          = "../generated/prisma-client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  userId            String   @db.ObjectId
  title             String
  domain            String   @unique
  prodTreeId        String?  @db.ObjectId // exists when published
  devTreeId         String   @db.ObjectId
  prodTreeIdHistory String[] @db.ObjectId
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model Tree {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  root Json
}

model InstanceProps {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  instanceId String  @db.ObjectId
  treeId     String  @db.ObjectId
  props      Props[]
}

type Props {
  id    String @db.ObjectId
  prop  String
  value String
}

model Breakpoints {
  treeId String       @id @default(auto()) @map("_id") @db.ObjectId
  values Breakpoint[]
}

type Breakpoint {
  id       String @db.ObjectId
  label    String
  minWidth Int
}
